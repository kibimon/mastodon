- content_for :page_title do
  = t('monstodon.admin.mon.create')

= simple_form_for @mon, url: admin_monstodon_mon_index_path do |f|
  = render 'shared/error_messages', object: @mon

  .fields-group
    = f.input :display_name, placeholder: t('monstodon.admin.mon.display_name'), hint: t('monstodon.admin.mon.display_name_hint')
    = f.input :national_no, placeholder: t('monstodon.admin.mon.national_no'), hint: t('monstodon.admin.mon.national_no_hint')
    = f.input :owner_trainer_no, placeholder: t('monstodon.admin.mon.owner_trainer_no'), hint: t('monstodon.admin.mon.owner_trainer_no_hint')

  .actions
    = f.button :button, t('monstodon.admin.mon.create'), type: :submit
